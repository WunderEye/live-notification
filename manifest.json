{
	"manifest_version": 2,
	"name": "开播提醒",
	"version": "1.0.1",

	"description": "关注Panda.tv主播，开播时发送提醒",
	"icons": {
		"128": "icon128.png"
	},

	"background": {
		"scripts": ["common.js", "background.js"]
	},
	"browser_action": {
		"default_popup": "popup.html"
	},

	"author": "WunderEye",
	"permissions": [
		"http://www.panda.tv/",
		"http://*.pdim.gs/",
		"storage",
		"notifications",
		"background",
		"alarms"
	],
	"options_ui": {
		"page": "options.html"
	}
}
